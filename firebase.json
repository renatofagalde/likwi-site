{
  "hosting": {
    "public": "public",
    "ignore": ["**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.json", "headers": [{ "key": "Cache-Control", "value": "no-store" }] },
      { "source": "**", "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }] }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
